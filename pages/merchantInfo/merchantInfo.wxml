<!--user.wxml-->
<view class="user_banner">
	<view id="user_info">
		<view class="user_img">
			<open-data type="userAvatarUrl" class="user_pho"></open-data>
		</view>
		<view class="user_name">
			<open-data type="userNickName" lang="zh_CN"></open-data>
		</view>
		<view class="member_bank">
			<text>大众会员</text><text> 15165665</text>
		</view>
	</view>
	<view class="cre_wrap">
		<view class="credit">
			<view class="cre_img">
				<image src="/images/user_icon1.jpg"></image>
			</view>
			<text>600果冻</text>
		</view>
	</view>
</view>
<view class="userInfo">
	<view class="user_item flexRowBetween">

		<view class="user_in" bindtap="userInfor">
			<image src="/images/user_icon2.jpg"></image>
			<view class="text">个人信息</view>
		</view>

		<view class="user_in" bindtap="credit">
			<image src="/images/user_icon3.jpg"></image>
			<view class="text">我的果冻</view>
		</view>
		<view class="user_in" style="border-right:none" bindtap="about">
			<image src="/images/user_icon4.jpg"></image>
			<view class="text">关于我们</view>
		</view>
	</view>
	<view class="user_item flexRowBetween">

		<view class="user_in">
			<image src="/images/user_icon5.jpg"></image>
			<view class="text">修改密码</view>
		</view>

		<view class="user_in" bindtap="message">
			<image src="/images/user_icon6.jpg"></image>
			<view class="text">我的消息</view>
		</view>
		<view class="user_in" style="border-right:none" bindtap="comment">
			<image src="/images/user_icon7.jpg"></image>
			<view class="text">意见反馈</view>
		</view>
	</view>
</view>
